    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:id="@+id/item_news"

        android:padding="4dp"

        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn = "@layout/activity_news_list">

            <TextView
                android:id="@+id/news_category"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                tools:text="@tools:sample/lorem/random"
                android:maxLines="1"
                android:lines="1"
                app:layout_constraintBottom_toTopOf="@id/news_caption"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/news_caption"
                android:layout_width="0dp"
                android:layout_height="25dp"
                tools:text="Caption"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/news_category"
                app:layout_constraintEnd_toStartOf="@id/news_img"
                app:layout_constraintStart_toStartOf="parent"
                />
            <!--tools:text="Lapida ipsum rasmobile invertorum patroninum and other.-->
            <!--Bla bla bla. Tartum? pArantum? Magnum!"-->
            <TextView
                android:id="@+id/news_content"
                android:layout_width="0dp"
                android:layout_height="125dp"
                tools:text="@tools:sample/lorem/random"

                android:maxLines="5"
                android:lines="5"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/news_caption"
                app:layout_constraintEnd_toStartOf="@id/news_img"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/news_date"
                android:layout_width="0dp"
                android:layout_height="25dp"
                tools:text = "21:21 08.10.2018"
                app:layout_constraintTop_toBottomOf="@id/news_content"
                app:layout_constraintEnd_toStartOf="@id/news_img"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/news_img"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                app:layout_constraintTop_toBottomOf="@id/news_category"
                app:layout_constraintLeft_toRightOf="@id/news_content"
                app:layout_constraintBottom_toTopOf="@id/news_date"
                app:layout_constraintStart_toEndOf="@id/news_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/news_image_desc"
                android:visibility="gone"
                tools:visibility="visible"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

